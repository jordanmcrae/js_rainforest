<!DOCTYPE html>
<html>
<head>
  <title>Rainforest</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<br>
<div class="container">

  <div class="jumbotron">
    <h1>Rainforest</h1>

      <div class="btn-group" role="group" aria-label="...">
        <button type="button" class="btn btn-default"><a href="/products/">Home</button></a>
        <% if current_user %>
          <button type="button" class="btn btn-default"><a href="/products/new">Add a Product</button></a>
        <% end %>

        <div class="btn-group">
          <button type="button" class="btn btn-info" id="login_text"><a href="/sessions/new">Login</a></button>
          <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
            <span class="caret"></span>
            <span class="sr-only">Toggle Dropdown</span>
          </button>

          <ul class="dropdown-menu" role="menu">
            <li><a href="/users/new">Sign Up</a></li>
            <li class="divider"></li>
            <li><a href="/sessions/new">Login</a></li>
          </ul>

        </div>

        <div class="container">
          <div class="userinfo">
          </div>

        </div>
          <% if current_user %>
              <h5> Signed in as <%= current_user.name %>. <%= link_to "Log out", session_path("current"), :method => :delete %></h5>
            <% else %>
              <%= %>
          <% end %>
      </div>

  </div>

</div>

<!-- Flash notices -->
  <div class="container" id="flash_class">
    <div class="panel-body">
    <% if flash[:notice] %>
      <h5 id="notice" class="alert alert-success"><%= flash[:notice] %></h5>
    <% end %>
    <% if flash[:alert] %>
      <h5 id="alert" class="alert alert-danger"><%= flash[:alert] %></h5>
    <% end %>
    </div>
  </div>

<!-- Content -->

  <div class="container">

    <div class="panel panel-default">
      <div class="panel-body">
        <%= yield %>
      </div>
    </div>

    <div class="text-center">
      <div class="panel-footer"><h5>Rainforest 2015</h5></div>
    </div>

  </div>

</body>
</html>
